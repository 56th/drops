#=============================================================
#    DROPS parameter file for    film
#    simulation of two-phase flow:
#    film flow
#=============================================================


# time stepping
Time {
  NumSteps	=	10000
  StepSize	=	1e-4
}

# flow solver
Stokes {
  StokesMethod = 10502
  InnerIter	=	1000
  OuterIter	=	200
  InnerTol	=	1e-10
  OuterTol	=	1e-8
  PcAIter	=	200
  PcATol	=	1e-4
  PcSTol	=	1e-4
  XFEMStab	=	1
  Theta         =       1
}

NavStokes {
  Nonlinear	=	1
  Tol           =       5e-10
  Iter          =       10
  Reduction     =       0.1
}

# levelset solver
Levelset {
  Tol		=	1e-16
  Iter		=	1000
  SD		=	1
  CurvDiff	=	-1
  VolCorrection	=	1
  Theta         =       1
}

Coupling {
  Tol		=	1e-10	# not used a.t.m.
  Iter		=	0	# -1 = till convergence
}

# re-initialization of levelset function
Reparam {
  Freq		=	100 # 0 = no reparametrization
  Method	=	1	# 0/1 = fast marching without/with modification of zero
}

# adaptive refinement
AdaptRef {
  Freq		=	10
  FinestLevel	=	2
  CoarsestLevel =       0
  Width		=	5e-4
}

# material data, all units are SI, scaled by rho
#Mat {
#  DensGas	=	1			# "Luft"/Silikonoel
