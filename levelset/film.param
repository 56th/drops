#  DensFluid	=	1
#  ViscFluid	=	5.7e-6	# mu/rho
#  SmoothZone	=	1e-4
#  SurfTension	=	0 #5.5e-6 	# 2e-3 # sigma/(0.4 rho_F + 0.6 rho_G)
#}
# material data, all units are SI
Mat {
  DensGas	=	1.2			# "Luft"/Silikonoel
  ViscGas	=	1.71e-5
  DensFluid	=	909.3
  ViscFluid	=	5.183e-3
  SmoothZone	=	1e-4
  SurfTension	=	11e-3 # 22e-3
}

# experimental conditions
Exp {
#  Gravity     =       2.539  -9.476 0 # Neigungswinkel 15 Grad #former
#  Gravity     =       5.627  -8.036 0 # Neigungswinkel 35 Grad
  Gravity     =        8.036  -5.627 0 # Neigungswinkel 55 Grad
#  Gravity     =       9.81 0 0 # Neigungswinkel 90 Grad
  PumpAmpl    =       0.2
  PumpFreq    =       10
  Ampl_zDir   =       0.5
  Thickness   =       6.35e-4
}

# miscellaneous

MeshResolution  =       20 6 2
MeshSize        =       20.9e-3 4e-3 4e-3
InitialCond	=	1      # 1=Stokes, 2=Nusselt, -1=read from file
InitialFile	=	initial/filmNs40
BndCond 	=	12wo12
EnsightCase	=	filmNsTau5e-3
EnsightDir	=	ensight
SerializationFile =	filmNs.mg
DeserializationFile =	none # filmNs40.mg


