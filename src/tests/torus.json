        "perturbed_torus": {
            "Type": "CSG-body (v0)",
            "Instructions" : [
                { "Type": "Levelset", "Function": "perturbed_torus" }
            ]
        }
    },

    "perturbed_torus_parameters": {
        "alpha": 50,
        "Torus": {
            "Type": "CSG-body (v0)",
            "Instructions" : [
                { "Type": "Torus", "BigRadius": 0.4, "SmallRadius": 0.2, "Axis": [0, 0, 1] }
            ]
        }
    },

    "deco_cube_parameters": {
        "radius": 1.8,
        "shift": -3
    },

    "Domain": {
        "Type": "BrickBuilder",
        "Origin": [-1, -1, -1],
        "E1": [2, 0, 0],
        "E2": [0, 2, 0],
        "E3": [0, 0, 2],
        "N1": 3,
        "N2": 3,
        "N3": 3
    },

    "AdaptRef": {
        "Width": 0.1,
        "CoarsestLevel": 0,
        "FinestLevel": 4,
        "CurvatureFinestLevel": 0
    },

    "LevelsetMapper": {
        "Tol": 1e-7,
        "Iter": 30,
        "InnerTol": 5e-9,
        "InnerIter": 50,
        "ArmijoConstant": 1e-2,
        "Method": "Newton" //"FixedPointWithLineSearch" // "Newton"
    },

    "VTK": {
        "VTKName": "csgtest",
        "VTKDir":  "."
    },

    "Subsampling": 2,
    "Testcase": "redistancing", // "area", // "redistancing"
    "SampleCurvature": false
}
