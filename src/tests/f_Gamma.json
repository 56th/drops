{
//=============================================================
//    DROPS parameter file
//    Study different discretizations of interfacial tension
//=============================================================
//General section
	"General":
	{
		"ProgressBar":  1, //show progress bar
		"DynamicLibsPrefix": "../", //where should we look for shared objects?
		"DynamicLibs": [ //select libraries to be loaded after program start
			"misc/libmisc-scalarFunctions",
			"misc/libmisc-vectorFunctions"
		]
	},

	"Stokes":
	{
		"VelocityBndData":
		{
			"Default": ["Nat0BC", "VecZero"] // Bug in some accumulators: The boundary-function is accessed for Dir0BC.
		},
		"PressureBndData": { "Default": ["Nat0BC"] }
	},

	"Levelset":
	{
		"Tol":			1e-14,
		"Iter":			10000,
		"SD":			0,
		"CurvDiff":		-5e-09,
		"VolCorrection":	0,
		"Discontinuous":	0,
		"Theta":		1,

		"BndData": { "Default": ["NoBC"] }
	},

	"LevelsetMapper":
	{
		"Tol":			1e-8,
		"Iter":			100,
		"Method":		"Newton" // "FixedPointWithLineSearch" // "Newton"
	},

	"Exp":
	{
		"RadDrop":		[0.5, 0.5, 0.5 ],
		"PosDrop":		[0, 0, 0 ],
		"ComparisonSource":	"ObliqueLBVar3", // "ObliqueLBVar", "ObliqueLBVar2", "ObliqueLBVar3"
		"ComparisonTarget":	"CoarseLevel", // "Improved", "Helper", "LowerBound", "Norm", "CoarseLevel"
		"SubsamplingExponent":	1.0,
		"SubsamplingFactor":	0.5
	},

	"AdaptRef":
	{
		"FinestLevel":		7,
		"CoarsestLevel":	0,
		"Width":		0.0001 //10 //0.00049
	},

	"SurfTens":
	{
		"SurfTension":		1,
		"UseMappedFESpace":	false,
		"TestFunction":		"" // "exp_test_function", ""
	},

	"Domain":
	{
		"Type": "BrickBuilder", // A parallelepiped
		"Origin": [-1,-1,-1],	// Origin
		"E1": [2,0,0],		// Basis to span the object,
		"E2": [0,2,0],		// not necessary orthonormal
		"E3": [0,0,2],		// ...
		"N1": 4,		// Number of cells along the E1-direction,
		"N2": 4,		//			 the E2-direction,
		"N3": 4			//			 the E3-direction.
	},

	"VTK": // VTK output
	{
		"VTKOut":		1,
		"VTKDir":		"vtk",
		"VTKName":		"f_Gamma",
		"TimeFileName":		"f_Gamma",
		"Binary":		1,
		"UseOnlyP1":		false,
		"ReUseTimeFile":	false
	}
}