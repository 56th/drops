		"BoundaryFncs":		"Zero!Zero!Zero!Zero!Zero!Zero"
	},

	"PoissonCoeff":
	{
		"Diffusion":		1.0e-3,
		"Reaction":		    "Zero",
		"Solution":		    "Zero",
		"Source":	 	    "ALEEx4_Source",
		"Flowfield":		"ALEEx4_Velocity",
		"InitialVal":		"ALEEx4_Solution",
		"Convection":       1
	},
    
    "Stabilization":
    {
        "SUPG":              1,
        "Magnitude":         1.0,
        "Grids":             1
    },

	"ALE":
	{
		      "wavy":		1,                          //true =1; false =0;
		 "Interface":		"ALEEx4_Interface"
