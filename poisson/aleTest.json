{
	//#################################
	//=============================================================
	//    DROPS parameter file for ipfilm.cpp
	//    simulation of poisson problem
	//=============================================================
	//poisson solver
	"Poisson":
	{
		"PcIter":		    1,
		"PcTol":		    0.1,
		"Iter":		        1000,
		"Restart":		    50, 	 //only valid when using GMRES
		"RelativeErr":      1, 	     //only valid when using GMRES,1 = true, 0 = false
		"Tol":		        1e-10,
		"Method":		    303,
		"SmoothingSteps":   1,
		"NumLvl":		    -1,
		"Relax":		    1,
		"SolutionIsKnown":	1 	 //1 = true, 0 = false
	},

