{
    "General": {
        "ProgressBar":  1, 
        "DynamicLibsPrefix": "../", 
        "DynamicLibs": [ 
                        "misc/libmisc-scalarFunctions",
                        "misc/libmisc-vectorFunctions"
        ]
    },

    "Mesh": {
        "Type":        "BrickBuilder",
        "Origin":      [-1.66666, -1.66666, -1.66666],
        "E1":          [ 3.33333,  0,  0],
        "E2":          [ 0,  3.33333,  0],
        "E3":          [ 0,  0,  3.33333],
        "N1":          2,
        "N2":          2,
        "N3":          2,
        "RestartFile": "",

        "AdaptRef": {
            "Freq":          3,
            "Width":         0.25,
            "CoarsestLevel": 2,
            "FinestLevel":   4,
            "SD":            0.1,

            "CurvDiff":      -1,
            "Discontinuous": 0
        }
    },

    "Time":
    {
        "Read" : 0,
        "Write": "yes",
        "NumSteps": 1000,
        "FinalTime": 10
    },

    "SurfSeparation": {

        "Exp": {
            "RadDrop":  [1, 0, 0],
            "PosDrop":  [0, 0, 0],
            "RadTorus": [1, 0.1],
            "Velocity": [0.0, 0.0,  0.0],

            "StationaryPDE": false,

            "Wind":     "UniformDilatation",
            "Levelset": "DilatatingEllipsoid",
            "Normal": "NormalDilatatingEllipsoid",
            "Rhs":      "ZeroScalarFun",
            "ConcentrationSolution": "ConstantSolution",
            "ChemicalPotentialSolution": "ZeroScalarFun"


        },
        "Method":     "NarrowBandStabilization",
        "UseMassDiv": true, 
        "Theta":      1,
        "Solver": {
                "PcAIter":      500,
                "PcATol":       1e-5,
                "PcBIter":      500,
                "PcBTol":       1e-5,
            "Iter": 1000,
            "Tol":  1e-10
        },
        "XFEMReduced":             -1,
        "Mobility":                    1,
        "Epsilon":                   0.1,
        "FEDegree":                1,
        "NormalLaplaceCoefficient": 1.0,
        "SolutionOutput": { 
            "Freq":   1,
            "Path":   "../../output/solutions/iface_sol",
            "Binary": true
        }
    },

    "Levelset": {
        "Solver": {
            "Tol":           1e-14,
            "Iter":          500
        },
        "SD":            0.1,
        "CurvDiff":      -1,
        "VolCorrection": "",
        "Theta":         1,
        "Discontinuous": 0
    },


    "LevelsetMapper": { 
        "Tol":               1e-7,
        "Iter":              20,
        "ArmijoConstant":    1e-2,
        "Method":            "Newton", 
        "MaxDampingSteps":   8,
        "TrustRegion":       1.0,
        "DeformationMethod": "map_zero_level_sets" 
    },

    "VTK": {
        "Freq":           1,
        "VTKDir":         "../../output/",
        "VTKName":        "separation",
        "TimeFileName":   "separation",
        "Binary":         1,
        "UseOnlyP1":      false,
        "ReUseTimeFile":  false,
        "UseDeformation": "0",
        "AddP1XPressure": "0",
        "AddDGOutput":    "0"
    }
}
