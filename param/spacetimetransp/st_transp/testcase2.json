
//=============================================================
// Just a consistency check test case. piecewise constant
// solutions with a henry coeff. jump of 2. r.h.s. accordingly
// Error should be exactly zero (up to round off errors)
// Note that this is not a very hard testcase as a du/dn is
// zero on Gamma* and thus the Nitsche penalty part is not
// necessary to enforce anything...
// only interesting test situation is when interface is moving 
// very fast through the grid (jumps over individual cells etc.
//=============================================================
{
        //General section
        "General":
        {
                "ProgressBar":  1, //show progress bar
                "DynamicLibsPrefix": "../", //where should we look for shared objects?
                "DynamicLibs": [ //select libraries to be loaded after program start
                        "misc/libmisc-scalarFunctions",
                        "misc/libmisc-vectorFunctions",
                        "misc/libmisc-csgFunctions",
                        "spacetimetransp/libspacetimetransp-sttranspCoeff"
                ]
        },

        // time stepping:
        "Time":
        {
                "NumSteps":             4,
                "EndTime":              0.0315,
                "Scheme":               1
        },
    
        //adaptive refinement:
        "AdaptRef":
        {
                "Freq":                 1,
                "FinestLevel":          0,
                "CoarsestLevel":        0,
                "Width":                0.1,
                "RefineStrategy":       1,
                "LoadBalStrategy":      1,
                "Partitioner":          1
        },

        // experimental conditions
        "Exp":
        {
                "RadDrop":              [0.3333333333333, 0.3333333333333, 0.3333333333333 ],
                "PosDrop":              [1, 1, 1 ],
                "RadInlet":             0.005
        },

        // experimental conditions
        "TestCase2":
        {
                "k":                    1.0,
                "v":                    1,
                "r":                    4,
                "C":                    1.0
        },

        "Transp":
        {
               "UseNSSol":             0,
                "DoTransp":             1,
                "Theta":                1,
                "Iter":                 200000,
                "Tol":                  1e-15,
                "DiffPos":              3.0,
                "DiffNeg":              1.0,
                "HPos":                 2.0,
                "HNeg":                 1,
                "IniCPos":              0.0,
                "IniCNeg":              0.0,
                // "InitialConcNeg":       "inineg",
                // "InitialConcPos":       "inipos",
                "InitialConcNeg":       "testcase2_sol_neg",
                "InitialConcPos":       "testcase2_sol_pos",
                "NitschePenalty":       625,

                "STXFEMStab":           0, //0.001,
                "Levelset":             "testcase2_lset",     
                "Flow":                 "testcase2_vel",      
                "RhsPos":               "testcase2_rhs_pos",  
                "RhsNeg":               "testcase2_rhs_neg",  
                "SolPos":               "testcase2_sol_pos",  
                "SolNeg":               "testcase2_sol_neg",  
                "SolDtPos":             "testcase2_rhs_pos",  
                "SolDtNeg":             "testcase2_rhs_neg",  
                "SolGradPos":           "ZeroVel",  
                "SolGradNeg":           "ZeroVel",  
                "BoundaryType":         "2!2!2!2!2!2",
                "BoundaryFncsNeg":      "testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos",
                "BoundaryFncsPos":      "testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos!testcase2_sol_pos",

                "DirectSolve":          0,
                "CompareResults":       0,
                "Quadrature":
                {       
                    "SubIntervalsPerEdge":  1,
                    "SubTimeIntervals":     1,
                    "LevelsetLinearInTime": 0
                }
        },

        "VTK":
        {

                "VTKOut":               2,
                "VTKDir":               "vtk",
                "VTKName":              "testcase2_",
                "Binary":               0
        },

        //Write out results:
        "Restart":
        {
                "Inputfile":            "none"
        },

        // Domain boundary and initial condition
        "DomainCond":
        {
                "InitialCond":          0,
                "GeomType":             1,
                "InitialFile":          "none",
                "MeshFile":             "2x2x2@16x16x16",
                "BoundaryType":         "21!21!21!21!21!21",
                "BoundaryFncs":         "ZeroVel!ZeroVel!ZeroVel!ZeroVel!ZeroVel!ZeroVel"
        }

}
