{
    "Output": {
      "Directory": "../../output/evolving_conv_lvl3",
      "EveryStep": -1,
      "Binary": true,
      "VTK": {
        "ExportFullGrid": false,
        "Velocity": true,
        "Vorticity": false,
        "SurfSpeed": false,
        "Pressure": true
      },
      "Matrices": false,
      "Vectors": false
    },

    "Mesh": {
        "Type": "BrickBuilder",
        "Origin": [-1.66666,-1.66666,-1.66666],
        "E1": [3.33333, 0,0], "E2": [0,3.33333,0], "E3": [0,0,3.33333],
        "N1": 2, "N2": 2, "N3": 2,
        "RestartFile": "",
        "AdaptRef": {
            "Comment": "adaptive refinement",
            "Freq": 0,
            "Width": 10.0,
            "CoarsestLevel": 0,
            "FinestLevel": 3,
            "SD": 0.1,
            "CurvDiff": -1,
            "Discontinuous": 0
        }
    },

    "Surface": {
      "Name": "Sphere",
      "Comment": "UseExactDistanceFunc = true will use Surface.dist(x, t) everywhere, and false will use Surface.phi(x, t) everywhere except for building interface/narrow-band FE spaces; Surface.dist(x, t) will be used for the latter",
      "UseExactDistanceFunc": false,
      "MinSurfaceSpeed": 1.0,
      "NarrowBandWidthScaling": 1.1,
      "Params": {
        "Sphere": {
          "r_0": 1.0,
          "A": 0.3
        },
        "Torus": {
          "R": 1.0,
          "r_min": 0.5,
          "r_max": 0.5
        }
      }
    },

    "SurfNavierStokes": {
      "nu": 1e-2,
      "gamma": 0.0,
      "Comment": "Use ConvectionTermType = Stokes (zero convection term), Oseen (convection term is given and equal to velocity), or NavierStokes (convection term will be extrapolated from prev time steps)",
      "ConvectionTermType": "NavierStokes",
      "IC": {
        "Velocity": {
          "Name": "DirectionChangeExact",
          "Params": {
            "0": {},
            "PolynomialExact": {},
            "DirectionChangeExact": {},
            "KillingExact": { "AngularVelocity": 1.0 },
            "KelvinHelmholtz": {
              "delta_0": 0.05,
              "cn": 0.01,
              "aa": 1.0, "ma": 16.0,
              "ab": 0.1, "mb": 20.0
            }
          }
        },
        "Pressure": {
          "Name": "PolynomialExact",
          "Params": {
            "0": {},
            "PolynomialExact": {}
          }
        }
      },
      "UseTangentialMassMatrix": true,
      "NormalPenalty": {
        "Power": -2.0,
        "Scaling": 1.0
      },
      "VelocityStab":  {
        "Power": -1.0,
        "Scaling": 1.0
      },
      "PressureStab":  {
        "Comment": "use Type = Normal for normal derivative stabilization or Full for full grad stabilization",
        "Type": "Normal",
        "Power": 1.0,
        "Scaling": 1.0
      },
      "Formulation": "Consistent",
      "NumbOfVirtualSubEdges": 2
    },

    "Time": {
      "BDF": 2,
      "NumbOfSteps": 50,
      "FinalTime": 1.0
    },

    "Solver": {
        "UsePreviousFrameAsInitialGuess" : true,
        "Outer" : {
          "Iteration" : "FLEXIBLE GMRES",
          "OutputFrequency" : 1,
          "KrylovSubspaceSize" : 100,
          "MaxIter" : 200,
          "RelResTol" : 1e-7
        },
        "Inner" : {
            "Type" : "BlockTriangular",
            "A" : {
              "Comment" : "use Iteration = Amesos2_* (e.g. Amesos2_Klu, Amesos2_SuperLU etc.) for the sparse-direct; Type = Full for full factorization, BlockTriangular for block Gauss-Seidel, BlockDiagonal for block Jacobi",
              "Iteration" : "Amesos2_KLU",
              "Type" : "BlockTriangular"
            },
            "S" : {
              "S_L" : true,
              "Iteration" : "CG",
              "MaxIter" : 200,
              "RelResTol" : 1e-2
            }
        }
    }
}